# Environment Configuration for Wand Orchestrator
# Copy this file to .env and customize as needed

# ==========================================
# Application Settings
# ==========================================
APP_NAME=Wand Orchestrator
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
WORKERS=1

# ==========================================
# Database Configuration
# ==========================================
DATABASE__URL=sqlite:///./wand.db
DATABASE__MAX_CONNECTIONS=10
DATABASE__CONNECTION_TIMEOUT=30
DATABASE__ECHO_SQL=false

# ==========================================
# Security Configuration  
# ==========================================
SECURITY__API_KEY=your-secret-api-key-here
SECURITY__JWT_SECRET=your-jwt-secret-key-here
SECURITY__JWT_ALGORITHM=HS256
SECURITY__JWT_EXPIRATION_HOURS=24
SECURITY__CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
SECURITY__CORS_ALLOW_CREDENTIALS=true
SECURITY__RATE_LIMIT_PER_MINUTE=60

# ==========================================
# Execution Engine Configuration
# ==========================================
EXECUTION__DEFAULT_TIMEOUT_SEC=30
EXECUTION__MAX_RETRIES=3
EXECUTION__DEFAULT_CONCURRENCY=5
EXECUTION__MAX_CONCURRENCY=50
EXECUTION__RETRY_BACKOFF_FACTOR=2.0
EXECUTION__RETRY_MAX_DELAY=60.0

# ==========================================
# Logging Configuration
# ==========================================
LOGGING__LEVEL=INFO
LOGGING__JSON_FORMAT=false
LOGGING__FILE_PATH=./logs/wand.log
LOGGING__MAX_FILE_SIZE_MB=100
LOGGING__BACKUP_COUNT=5

# ==========================================
# Monitoring Configuration
# ==========================================
MONITORING__ENABLE_METRICS=true
MONITORING__METRICS_PORT=9090
MONITORING__HEALTH_CHECK_INTERVAL=30
MONITORING__SSE_QUEUE_SIZE=1000
MONITORING__ENABLE_TRACING=false
MONITORING__JAEGER_ENDPOINT=

# ==========================================
# Cache Configuration
# ==========================================
CACHE__ENABLE_CACHE=true
CACHE__CACHE_TYPE=memory
CACHE__REDIS_URL=
CACHE__DEFAULT_TTL_SECONDS=3600
CACHE__MAX_CACHE_SIZE_MB=100

# ==========================================
# Plugin Configuration
# ==========================================
PLUGINS__ENABLE_DYNAMIC_LOADING=false
PLUGINS__PLUGIN_DIRECTORIES=[]
PLUGINS__ALLOWED_PLUGIN_TYPES=["agent", "tool"]
PLUGINS__PLUGIN_TIMEOUT_SEC=60
PLUGINS__ENABLE_HOT_RELOAD=false

# ==========================================
# Custom Settings (JSON format)
# ==========================================
CUSTOM_SETTINGS={}